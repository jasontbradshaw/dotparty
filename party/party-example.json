{
  "destination": "/custom/dir/to/put/links/in",

  "links": {
    "relative_to_destination": "/unless/it/starts/with/slash",

    "defaults_to_this_name_with_dot": ".defaults_to_this_name_with_dot",

    "simple-path": ".foo",
    "simple-path-obj": {
      "path": ".foo"
    },

    "multi-path": {
      "paths": ["gets/linked", "to/both"]
    },

    "simple-machine": {
      "machine": "defaults_to_hostname"
    },
    "multi-machine": {
      "machines": ["machine-id-1", "machine-id-2"]
    },

    "all-together-now": {
      "machine": "machine-id-1",
      "paths": ["/linked/here", ".and/here"]
    }
  },

  "packages": [
    "github-user/repository",
    "git@example.com:direct/repo-url.git"
  ],

  "ignore": [
    "some",
    "possibly/*globbed",
    ".files",
    "in/the/dotparty/dir",
    ".these/are/also/relative"
  ]
}
