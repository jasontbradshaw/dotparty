{
  "destination": "/custom/dir/to/put/links/in",

  "links": {
    "default": "~/.default",

    "simple-path": "~/.foo",
    "simple-path-obj": {
      "path": "~/.foo"
    },

    "multi-path": {
      "paths": ["~/.foo", "~/.bar"]
    },

    "simple-machine": {
      "machine": "machine-id-1"
    },
    "multi-machine": {
      "machines": ["machine-id-1", "machine-id-2"]
    },

    "all-together-now": {
      "machine": "machine-id-1",
      "paths": ["~/.foo", "~/.bar"]
    }
  },

  "packages": [
    "github-user/repository",
    "git@example.com:direct/repo-url.git"
  ],

  "ignore": [
    "some",
    "possibly/*globbed",
    ".files",
    "in/the/dotparty/dir"
  ]
}
